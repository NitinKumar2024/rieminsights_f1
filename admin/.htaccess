# Secure admin directory
# Prevent directory listing
Options -Indexes

# Deny access to .htaccess file
<Files .htaccess>
Order allow,deny
Deny from all
</Files>

# Deny access to files with specific extensions
<FilesMatch "\.(ini|log|sh|inc|bak|git|svn)$">
Order allow,deny
Deny from all
</FilesMatch>

# Redirect non-authenticated users to login page
# This is a fallback security measure - PHP session checks are primary security
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /f1/admin/

# Allow direct access to login.php
RewriteCond %{REQUEST_URI} !login\.php$

# Allow access to CSS, JS, images
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg)$

# Check if PHP session cookie exists
RewriteCond %{HTTP_COOKIE} !PHPSESSID=

# Redirect to login page
RewriteRule .* login.php [R,L]
</IfModule>

# Set default character set
AddDefaultCharset UTF-8

# Protect against XSS attacks
<IfModule mod_headers.c>
Header set X-XSS-Protection "1; mode=block"
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com; img-src 'self' data:;"
</IfModule>